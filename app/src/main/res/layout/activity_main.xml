<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="wishlists.bunny.com.wishlists.MainActivity"
    android:background="@drawable/main_background">

    <TextView
        android:id="@+id/textView"
        android:text="@string/title_name"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:textSize="25sp"
        android:textColor="#FFFF"
        android:textStyle="bold"
        android:fontFamily="cursive"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <EditText
        android:background="#efc59a"
        android:id="@+id/titleEditText"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/textView"
        android:layout_marginTop="60dp"
        android:hint="Enter Title"
        android:fontFamily="cursive"
        android:layout_width="250dp"
        android:layout_height="wrap_content" />

    <EditText
        android:layout_width="250dp"
        android:layout_height="200dp"
        android:id="@+id/wishEditText"
        android:hint="Enter a wish..."
        android:fontFamily="cursive"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:layout_below="@id/titleEditText"
        android:background="#efc59a"
        android:gravity="start"/>

    <Button
        android:id="@+id/saveButton"
        android:layout_marginTop="30dp"
        android:layout_below="@id/wishEditText"
        android:text="Save"
        android:fontFamily="cursive"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="#efc59a"
        android:background="#35005b"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"/>

    <Button
        android:id="@+id/mainListView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My Wishes"
        android:textStyle="bold"
        android:fontFamily="cursive"
        android:background="#35005b"
        android:textColor="#efc59a"
        android:textSize="20sp"
        android:layout_alignTop="@+id/saveButton"
        android:layout_alignRight="@+id/wishEditText"
        android:layout_alignEnd="@+id/wishEditText" />


</RelativeLayout>
